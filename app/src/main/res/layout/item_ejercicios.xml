<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_ejercicio"
        android:layout_width="370dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="@color/verde"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/imagenEjercicio"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/image_view_rounded"/>

            <CheckBox
                android:id="@+id/checkboxEjercicios"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:text="@string/CURLBARRA"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:theme="@style/checkboxColoreado"
                android:fontFamily="@font/lato_bold"
                android:layoutDirection="rtl"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>