<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainEleccionMusculo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEleccionMusculos">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo">
        <ImageView
            android:id="@+id/botonAtrasEleccionEjercicio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/flecha_atras"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp">
        </ImageView>

        <TextView
            android:id="@+id/tituloEleccionMusculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ELECCIONEJERCICIOS"
            android:textColor="@color/verde"
            android:textSize="35sp"
            android:fontFamily="@font/lato_regular"
            app:layout_constraintTop_toBottomOf="@id/botonAtrasEleccionEjercicio"
            app:layout_constraintStart_toStartOf="@id/botonAtrasEleccionEjercicio"
            android:layout_marginTop="30dp">
        </TextView>

        <ScrollView
            android:id="@+id/scrollMusculos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tituloEleccionMusculo"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewEjercicio"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:cardCornerRadius="40dp"
                    android:backgroundTint="@color/verde"
                    android:background="@color/verde"
                    app:layout_constraintDimensionRatio="2:1">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cuadroVerde"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imagenEjercicio"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:background="@color/fondo"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp">
                        </ImageView>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/cuadroVerde"
                            app:layout_constraintBottom_toBottomOf="@id/cuadroVerde"
                            app:layout_constraintEnd_toStartOf="@id/imagenEjercicio"
                            android:text="@string/CURLBARRA"
                            android:textColor="@color/fondo"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="25sp"
                            android:layoutDirection="rtl"
                            android:layout_marginEnd="20dp">
                        </CheckBox>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/SIGUIENTE"
            android:backgroundTint="@color/verde"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/fondo"
            app:layout_constraintEnd_toEndOf="@id/fondo"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="20dp">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>