<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPerfil"
    android:background="@drawable/fondoPerfil">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_perfil"
            android:layout_alignTop="@+id/perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:layout_marginTop="-90dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/verde"
            android:textStyle="bold"
            android:textSize="30dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/perfil"
            android:src="@drawable/ic_image_perfil"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="120dp"/>

        <TextView
            android:id="@+id/txt_nombre"
            android:layout_below="@+id/perfil"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facundo Chevarria"
            android:textColor="@color/white"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/txt_edad"
            android:layout_below="@+id/txt_nombre"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad: 20 años"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/txt_peso"
            android:layout_below="@+id/txt_edad"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso: 80 Kg"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/txt_peso"
            android:text="Editar"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/verde"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_peso"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_image_grafics"
                android:background="@null"
                android:layout_margin="10dp"
                android:contentDescription="Gráfico"/>

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_image_information"
                android:background="@null"
                android:layout_margin="10dp"
                android:contentDescription="Documento" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_image_camera"
                android:background="@null"
                android:layout_margin="10dp"
                android:contentDescription="Imagen" />
        </LinearLayout>


    </RelativeLayout>



</ScrollView>