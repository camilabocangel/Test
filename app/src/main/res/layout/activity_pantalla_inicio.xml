<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPantallaInicio">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo">
        <TextView
            android:id="@+id/comienzaPantallaInicio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/COMIENZAPANTALLAINICIO"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp">
        </TextView>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollPantallaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/comienzaPantallaInicio"
            android:layout_marginTop="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewSinTiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/contraintCardviewSinTiempo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient1">

                        <TextView
                            android:id="@+id/sintiempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/SINTIEMPO"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/rutinaPredetTexto"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="@string/RUTINAPREDETERMINADA"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_regular"
                            app:layout_constraintTop_toBottomOf="@id/sintiempo"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp">
                        </TextView>
                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="175dp"
                            android:src="@drawable/chica_pesa"
                            app:layout_constraintStart_toEndOf="@id/rutinaPredetTexto"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="40dp">
                        </ImageView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewPersonalizaRutina"
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="@id/cardviewSinTiempo"
                    app:layout_constraintStart_toEndOf="@id/cardviewSinTiempo"
                    android:layout_marginStart="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient2">

                        <TextView
                            android:id="@+id/muchaEnergia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/MUCHAENERGIA"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/rutinaPersonalTexto"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="@string/CREATUSPROPIASRUTINAS"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_regular"
                            app:layout_constraintTop_toBottomOf="@id/muchaEnergia"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp">
                        </TextView>
                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/chico_pesa"
                            app:layout_constraintStart_toEndOf="@id/rutinaPersonalTexto"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="30dp">
                        </ImageView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <androidx.cardview.widget.CardView
            android:id="@+id/datosCuriososCardview"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollPantallaInicio"
            app:layout_constraintStart_toStartOf="@id/comienzaPantallaInicio">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/gradient3">
                <TextView
                    android:id="@+id/datoCurioso"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/DATOCURIOSO"
                    android:textSize="15sp"
                    android:fontFamily="@font/lato_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewPerfilPantallaInicial"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/datosCuriososCardview"
            app:layout_constraintStart_toStartOf="@id/datosCuriososCardview"

            android:layout_marginTop="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient4">
                <ImageView
                    android:id="@+id/iconoPerfilPantallaInicio"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/perfil"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PERFILPANTALLAINICIO"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iconoPerfilPantallaInicio"
                    android:layout_marginTop="10dp">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewHistorialPantallaInicial"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/datosCuriososCardview"
            app:layout_constraintEnd_toEndOf="@id/datosCuriososCardview"
            android:layout_marginTop="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient4">
                <ImageView
                    android:id="@+id/iconoHistorialPantallaInicio"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pesita"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HISTORIAL"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iconoHistorialPantallaInicio"
                    android:layout_marginTop="10dp">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>